EMPLOYEE MANAGER TABLE:

SELECT D.MGR_SSN, E.SSN, E.SALARY FROM DEPARTMENT AS D, EMPLOYEE AS E WHERE D.DNUMBER = E.DNO;

SELECT D.MGR_SSN, E.SSN, E.SALARY FROM DEPARTMENT AS D, EMPLOYEE AS E WHERE D.DNUMBER = E.DNO AND E.SALARY > (SELECT AVG(SALARY) FROM  EMPLOYEE);

SELECT E.FNAME FROM EMPLOYEE AS E WHERE SSN IN (SELECT D.MGR_SSN FROM DEPARTMENT AS D, EMPLOYEE AS E WHERE D.DNUMBER = E.DNO AND E.SALARY > (SELECT AVG(SALARY) FROM EMPLOYEE) GROUP BY MGR_SSN HAVING COUNT(MGR_SSN)>1);

SELECT E.FNAME FROM EMPLOYEE AS E WHERE SSN IN (SELECT D.MGR_SSN FROM DEPARTMENT AS D JOIN EMPLOYEE AS E ON D.DNUMBER = E.DNO WHERE E.SALARY > (SELECT AVG(SALARY) FROM EMPLOYEE) GROUP BY MGR_SSN HAVING COUNT(MGR_SSN)>1);